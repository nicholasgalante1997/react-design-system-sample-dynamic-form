{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "jsx": "react-jsx",
      "module": "commonjs",
      "rootDir": ".",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
      },
      "resolveJsonModule": true,
      "declaration": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  